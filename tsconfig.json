{
  "include": [
    "./source/**/*"
  ],
  "compilerOptions": {
    "incremental": false,
    "target": "ES2021",
    "module": "commonjs",
    "declaration": false,
    "sourceMap": false,
    "outDir": "build",
    "rootDir": "source",
    "removeComments": true,
    "strict": true,
    "alwaysStrict": true,
    "esModuleInterop": true
  }
}